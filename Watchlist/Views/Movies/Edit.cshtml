@model EditViewModel

@{
    ViewBag.Title = "Edit Movie";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <input type="hidden" asp-for="@Model.Id" />
            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label">Title</label>
                <input asp-for="@Model.Title" class="form-control" aria-required="true" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Director" class="form-label">Director</label>
                <input asp-for="@Model.Director" class="form-control" aria-required="true" />
                <span asp-validation-for="Director" class="text-danger"></span>
            </div>   
            <div class="mb-3">
                <label asp-for="@Model.Rating" class="form-label">Rating</label>
                <input asp-for="@Model.Rating" class="form-control" aria-required="true" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>     
            <div class="mb-3">
                <label asp-for="@Model.GanreName" class="form-label">Ganre</label>
                <input asp-for="@Model.GanreName" class="form-control" aria-required="true" />
                <span asp-validation-for="GanreName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Save" />
                <a href="/" class="btn btn-danger ml-2">Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}